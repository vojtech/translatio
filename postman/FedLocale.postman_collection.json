{
  "info": {
    "name": "Translatio CMS API",
    "_postman_id": "6a3d4a3b-0e5a-4d9b-9a0c-7c8c7f1d2a3f",
    "description": "Postman collection for testing Translatio Ktor server JSON API. Includes auth (login/register/logout), health, locales, and providers discovery. Sessions rely on TRANSLATIO_SESSION cookie; Postman will preserve it between requests in a session.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Root",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "health"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Has ok=true', function () { var json = pm.response.json(); pm.expect(json.ok).to.eql(true); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "health"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Body status OK', function () { var json = pm.response.json(); pm.expect(json.status).to.eql('OK'); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Providers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/providers",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "providers"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Has boolean keys', function () { var json = pm.response.json(); ['github','google','microsoft','apple'].forEach(k=> pm.expect(typeof json[k]).to.be.oneOf(['boolean','undefined'])); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Register (email used as username, role=viewer)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "email", "value": "user{{randomInt}}@example.com", "type": "text" },
                { "key": "firstName", "value": "Test", "type": "text" },
                { "key": "lastName", "value": "User", "type": "text" },
                { "key": "password", "value": "Password123", "type": "text" }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "pm.environment.set('lastUserId', json.userId);",
                  "pm.environment.set('lastUsername', json.username);",
                  "pm.test('Has userId and username', function () { pm.expect(json).to.have.property('userId'); pm.expect(json).to.have.property('username'); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login (default admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "username", "value": "{{adminUser}}", "type": "text" },
                { "key": "password", "value": "{{adminPass}}", "type": "text" }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json(); pm.test('Has admin username', function () { pm.expect(json.username).to.eql(pm.environment.get('adminUser')); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/logout",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "logout"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Locales",
      "item": [
        {
          "name": "List Locales (requires login)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/locales",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "locales"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Array response', function () { var json = pm.response.json(); pm.expect(Array.isArray(json)).to.be.true; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Add Locale (requires login)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "language", "value": "cs", "type": "text" },
                { "key": "region", "value": "CZ", "type": "text" }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/locales",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "locales"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Created 200', function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json(); pm.test('Has id and language', function () { pm.expect(json).to.have.property('id'); pm.expect(json.language).to.eql('cs'); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost" },
    { "key": "adminUser", "value": "admin" },
    { "key": "adminPass", "value": "admin123" }
  ]
}
